<odoo>
    <data>
        <record id="view_sale_order_report_wizard_form" model="ir.ui.view">
            <field name="name">view.report.sale_order.wizar.form</field>
            <field name="model">sale_order.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Print sale order">
                    <group>
                        <group>
                            <field name="langs" widget="many2many_tags" options="{'no_create_edit':'1'}"></field>
                        </group>
                        <group>
                            <field name="template"></field>
                            <field name="zipped"></field>
                        </group>
                    </group>
                    <footer>
                        <button name="action_print_report" type="object" string="Print" class="btn-primary" />
                        <button special="cancel" string="Cancel" class="btn-secondary" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="module_report_id" model="ir.actions.act_window">
            <field name="name">Advanced print</field>
            <field name="res_model">sale_order.report.wizard</field>
            <field name='view_mode'>form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="sale.model_sale_order" />
            <field name="binding_type">report</field>
        </record>

        <record id="action_report_sale_order" model="ir.actions.report">
            <field name="name">Mitxelena_sale_order</field>
            <field name="model">sale.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">sale_order_mitxelena.report_sale_order_template</field>
            <field name="print_report_name">(object.name)</field>
        </record>
    </data>
</odoo>