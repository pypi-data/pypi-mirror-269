MDScreen:
    name: "login"
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        Image:
            source: "trialfortheimagesfortheicysabstract4joioiytyhhtjhihtyiohjtio9489489.jpg"

            size_hint: 1,1
            pos_hint : {"center_x": .67, "center_y": .5}
        Image:
            source: "loginimg.png"
            size_hint: 4,4
            pos_hint: {"center_x": .3, "center_y": .4}
            opacity: 0.15


        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: rgba(26, 24, 58, 255)
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "main"
                login_email_input.text = ""
                login_pass_input.text = ""
        MDLabel:
            text : "W e l c o m e !"
            font_name : "bahnschrift"
            font_size : "26sp"
            pos_hint : {"center_x": .6, "center_y": .85}
            color: rgba(0, 0, 59, 255)

        MDLabel:
            text : "Sign in to continue"
            font_name : "bahnschriftlight"
            font_size : "18sp"
            pos_hint : {"center_x": .6, "center_y": .76}
            color: rgba(135, 133, 193, 255)

        MDFloatLayout:
            id: login_email
            size_hint: .7, .07
            pos_hint: {"center_x": .5, "center_y": .6}
            TextInput:
                id: login_email_input
                hint_text: "Enter your Email"
                font_name: "bahnschrift"
                size_hint_y: .75
                pos_hint:{"center_x": .43, "center_y": .5}
                background_color: 1, 1, 1, 0
                foreground_color: rgba(0, 0, 59, 255)
                cursor_color: rgba(0, 0, 59, 255)
                font_size: "14sp"
                cursor_width: "2sp"
                multiline: False

            MDFloatLayout:
                pos_hint: {"center_x": .45, "center_y": 0}
                size_hint_y:.03
                md_bg_color: rgba(178, 178, 178, 255)

        MDFloatLayout:
            id: login_pass
            size_hint: .7, .07
            pos_hint: {"center_x": .5, "center_y": .45}
            TextInput:
                id: login_pass_input
                hint_text: "Enter your Password"
                font_name: "bahnschrift"
                size_hint_y: .75
                pos_hint:{"center_x": .43, "center_y": .5}
                background_color: 1, 1, 1, 0
                foreground_color: rgba(0, 0, 59, 255)
                cursor_color: rgba(0, 0, 59, 255)
                font_size: "14sp"
                cursor_width: "2sp"
                multiline: False
                password: True
            MDFloatLayout:
                pos_hint: {"center_x": .45, "center_y": 0}
                size_hint_y:.03
                md_bg_color: rgba(178, 178, 178, 255)

        Button:
            text: "LOGIN"
            size_hint: .66, .065
            background_color: 0, 0, 0, 0
            pos_hint: {"center_x": .5, "center_y": .23}
            font_name: "bahnschrift"
            on_release:
                app.handle_loginbutton()
                app.on_loginBtn_comp(2)
                login_email_input.text = ""
                login_pass_input.text = ""

            canvas.before:
                Color:
                    rgb: rgba(52, 0, 231, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]



        MDTextButton:
            text: "Don't have an account? \n Sign in"
            font_name: "bahnschriftlight"
            font_size: "13.5sp"
            halign: "center"
            pos_hint: {"center_y": .12, "center_x": .51}
            color: rgba(135, 133, 193, 255)
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "signup"