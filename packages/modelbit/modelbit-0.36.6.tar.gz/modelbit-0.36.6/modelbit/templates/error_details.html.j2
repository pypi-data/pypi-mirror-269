<div style="{{ styles.container }}">
  <span style="{{ styles.errorLabel }}">Error:</span>
  {{ errorText }}
  {% if startOpen %}
    <div style="{{ styles.base }}">
      <pre style="white-space: pre-wrap;">
{{ errorDetails }}
      </pre>
    </div>
  {% else %}
  <div>
    <span
      style="{{ styles.link }}"
      id="show-{{ renderId }}"
      onClick="document.getElementById('lst-{{ renderId }}').style.display='block'; document.getElementById('show-{{ renderId }}').style.display='none'; document.getElementById('btn-{{ renderId }}').style.display='none'; document.getElementById('fst-{{ renderId }}').style.display='none'; ">
      Show details.
    </span>
    <div style="{{ styles.base }} display: none;" id="lst-{{ renderId }}">
      <pre style="white-space: pre-wrap;">
{{ errorDetails }}
      </pre>
    </div>
  </div>
  {% endif %}
</div>
