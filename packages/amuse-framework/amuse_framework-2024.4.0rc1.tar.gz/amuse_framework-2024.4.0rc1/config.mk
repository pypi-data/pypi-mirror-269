HDF5_FFLAGS=
HDF5_FLIBS= -L/opt/homebrew/Cellar/hdf5/1.14.3/lib -L/opt/homebrew/opt/libaec/lib 

NETCDF_PREFIX=/opt/homebrew
NETCDF_FLAGS=-I/opt/homebrew/Cellar/netcdf/4.9.2_1/include
NETCDF_LIBS=-lnetcdf 
NETCDFF_PREFIX=/opt/homebrew
NETCDFF_FLAGS=
NETCDFF_LIBS=

CUDA_ENABLED=no
NVCC=
NVCC_FLAGS=
