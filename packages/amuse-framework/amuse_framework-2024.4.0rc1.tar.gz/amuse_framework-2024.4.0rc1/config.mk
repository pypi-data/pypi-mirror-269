# amuse configuration generated by ./configure from config.mk.in

PYTHON=/Users/rieder/Code/amuse-packagebuilder/env/bin/python3
CODE_GENERATOR=amusifier

#
# PYTHON embedding
#
PYTHON_DEV=no
CYTHON=
PYTHONCONFIG='no'
PYTHONDEV_CFLAGS=
PYTHONDEV_LDFLAGS=


#
# Compilers, for compiling without MPI
# these compilers must be the same or compatible with
# the mpi compilers
#
CXX=g++
CC=gcc
FC=gfortran
GFORTRAN_VERSION=13.2.0
IFORT_VERSION=
FC_ISO_C_AVAILABLE=yes

#
# Default flags, append to these in the makefiles
#
CXXFLAGS=-g -O2 -fno-common
CFLAGS=-g -O2 -fno-common
FCFLAGS=-g -O2 -fno-common
LDFLAGS=

#
# MPI Compilers
#
MPI_ENABLED=yes
MPICXX=mpicxx
MPICC=mpicc
MPIFC=mpif90
MPIEXEC=/opt/homebrew/bin/mpiexec

MPI_CFLAGS=-I/opt/homebrew/Cellar/open-mpi/5.0.1/include
MPI_CXXFLAGS=-I/opt/homebrew/Cellar/open-mpi/5.0.1/include
MPI_FCFLAGS=-Wl,-flat_namespace -I/opt/homebrew/Cellar/open-mpi/5.0.1/lib
MPI_CLIBS=-lmpi
MPI_CXXLIBS=-lmpi
MPI_FCLIBS=-Wl,-flat_namespace -I/opt/homebrew/Cellar/open-mpi/5.0.1/lib -L/opt/homebrew/Cellar/open-mpi/5.0.1/lib -lmpi_usempif08 -lmpi_usempi_ignore_tkr -lmpi_mpifh -lmpi

#
# Java
#
JAVA_ENABLED=no
JAVA=/usr/bin/java
JAVAC=/usr/bin/javac
JAR=/usr/bin/jar
JAVA_VERSION=

#
# OpenMP
#

OPENMP_ENABLED=yes
OPENMP_FCFLAGS=-fopenmp
OPENMP_CFLAGS=-fopenmp
    
#
# Libraries: FFTW, GSL, HDF5, CUDA, SAPPORO
#

