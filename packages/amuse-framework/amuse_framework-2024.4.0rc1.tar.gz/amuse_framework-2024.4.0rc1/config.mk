FFTW_FLAGS=-I/opt/homebrew/Cellar/fftw/3.3.10_1/include
FFTW_LIBS=-L/opt/homebrew/Cellar/fftw/3.3.10_1/lib -lfftw3 -lfftw3_threads
    
FOUND_GSL=yes
GSL_FLAGS=-I/opt/homebrew/Cellar/gsl/2.7.1/include
GSL_LIBS=-L/opt/homebrew/Cellar/gsl/2.7.1/lib -lgsl -lgslcblas -lm

FOUND_GMP=yes
GMP_FLAGS=
GMP_LIBS=-L/opt/homebrew/Cellar/gmp/6.3.0/lib -lgmp

FOUND_MPFR=yes
MPFR_FLAGS=
MPFR_LIBS=-L/opt/homebrew/Cellar/mpfr/4.2.1/lib -lmpfr -lgmp

HDF5_FLAGS=-I/opt/homebrew/Cellar/hdf5/1.14.3/include -I/opt/homebrew/opt/libaec/include -I/private/tmp/hdf5-20231218-63609-61hz5b/hdf5-1.14.3/src/H5FDsubfiling
